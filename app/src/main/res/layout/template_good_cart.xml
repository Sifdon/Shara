<?xml version="1.0" encoding="utf-8"?>
<org.seemsGood.shara.view.custom.GoodCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="3dp"
    android:id="@+id/good_cart_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/good_placeholder"
            android:src="@drawable/good_placeholder"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="112dp"
            android:layout_height="56dp"/>
        <ImageView
            android:id="@+id/good_image"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="112dp"
            android:layout_height="56dp"/>

        <ImageView
            android:src="@drawable/favorite_button_container"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/good_favorite_button"
            android:src="@drawable/ic_favorite_color_no"
            android:layout_margin="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/good_name"
            android:layout_toRightOf="@id/good_placeholder"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="Good long long name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Drink"
            android:textStyle="bold|italic"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/good_kind"
            android:layout_toRightOf="@id/good_placeholder"
            android:layout_below="@id/good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/good_price"
            android:layout_alignParentRight="true"
            android:text="120p 50k"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_good_add"
            android:id="@+id/good_count_plus"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/good_placeholder"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/good_count"
            android:layout_toLeftOf="@id/good_count_plus"
            android:layout_alignBottom="@id/good_placeholder"
            android:text="0"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:src="@drawable/ic_good_remove"
            android:id="@+id/good_count_minus"
            android:layout_alignBottom="@id/good_placeholder"
            android:layout_toLeftOf="@id/good_count"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />


    </RelativeLayout>
</org.seemsGood.shara.view.custom.GoodCardView>